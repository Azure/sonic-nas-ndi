<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE CLISH_MODULE [
<!ENTITY SUBTREE_FILTER "Filter_Type:SUBTREE">
<!ENTITY NS_FILTER      "http://www.dellemc.com/networking/os10/dell-ip">
]>
<CLISH_MODULE
    xmlns="http://www.dellemc.com/force10/XMLSchema"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:xi="http://www.w3.org/2001/XInclude"
    xsi:schemaLocation="http://www.dellemc.com/force10/XMLSchema
			http://www.dellemc.com/force10/XMLSchema/clish.xsd">
<!-- ********************************************************************** -->
<!-- *  CLEAR ARP COMMANDS                                                * -->
<!--
     clear ip arp all
     clear ip arp interface
                            vlan <vlan-id>
                            ethernet <ethernet interface>
                            port-channel <Id>
-->
<!-- ********************************************************************** -->
    <VIEW name="enable-view">
        <COMMAND name="clear ip arp"
            help="Clear ARP related information"
            ptype="SUBCOMMAND"
            operation="generic-rpc"
            namespace="&NS_FILTER;"
            >

            <PARAM name="clear-ip-arp-options"
            help=""
            ptype="SUBCOMMAND"
            mode="switch">
                <PARAM name="all"
                    help="Clear all ARP entries"
                    ptype="SUBCOMMAND"
                    mode="subcommand"
                    yang_name="/clear-arp/all=true"/>

                <PARAM name="interface"
                    help="Choose interface type to clear"
                    ptype="SUBCOMMAND"
                    mode="subcommand">
                    <PARAM name="intf-type"
                        help="Choose interface type to clear"
                        ptype="SUBCOMMAND"
                        mode="switch">
                        <PARAM name="eth-value"
                            help="Ethernet IEEE 802.3"
                            ptype="PHY_INTERFACE"
                            yang_name="/clear-arp/interface=${eth-value}">
                        </PARAM>
                        <PARAM name="po-value"
                            help="Port-channel Interface"
                            ptype="PO_INTERFACE"
                            yang_name="/clear-arp/interface=${po-value}">
                        </PARAM>
                        <PARAM name="vlan-value"
                            help="VLAN Interface"
                            ptype="VLAN_INTERFACE"
                            yang_name="/clear-arp/interface=${vlan-value}">
                        </PARAM>
                    </PARAM>
                </PARAM>
            </PARAM>
        <ACTION builtin="clish_extn"></ACTION>
        </COMMAND>
    </VIEW>
</CLISH_MODULE>
